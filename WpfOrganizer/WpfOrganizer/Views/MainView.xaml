<UserControl x:Class="WpfOrganizer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfOrganizer.Views"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             mc:Ignorable="d" 
             d:DesignHeight="950" d:DesignWidth="800">
    <DockPanel d:Background="White" ClipToBounds="True">
        <DockPanel DockPanel.Dock="Top">
            <Grid DockPanel.Dock="Left" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--<Button
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="MaterialDesignFloatingActionMiniLightButton">
                    <materialDesign:PackIcon
                Kind="Add"
                Height="20"
                Width="20" />
                </Button>-->
                <Button
                Margin="5"
                Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                ToolTip="MaterialDesignFloatingActionDarkButton">
                    <materialDesign:PackIcon Kind="AddBold"/>
                </Button>

                <materialDesign:PopupBox
                Margin="5"
                Grid.Column="1"
                StaysOpen="True"
                Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                PlacementMode="BottomAndAlignCentres"
                ToggleCheckedContentCommandParameter="wowsers"
                ToolTip="Добавить тэг"
                Background="{DynamicResource PrimaryHueDarkBrush}"
                Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                Cursor="Hand">
                    <materialDesign:PopupBox.ToggleContent>
                        <materialDesign:PackIcon Kind="TagAdd"/>
                    </materialDesign:PopupBox.ToggleContent>
                    <materialDesign:Card
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Width="200"
                        Padding="10">
                        <StackPanel>
                            <TextBox
                            Margin="10" 
                            materialDesign:HintAssist.Hint="Название"
                            materialDesign:HintAssist.HelperText=""/>

                            <TextBlock Text="Цвет тэга:" Margin="10"/>
                            <materialDesign:ColorPicker />
                            <Button
                            Margin="10"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="MaterialDesignFloatingActionMiniAccentButton">
                                <materialDesign:PackIcon Kind="Add"/>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>
                </materialDesign:PopupBox>
            </Grid>
            
            
            <materialDesign:Chip
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Content="James Willock" Cursor="Hand">
                <materialDesign:Chip.Icon>
                    <Image Source="/Views/default_profile.png" />
                </materialDesign:Chip.Icon>
            </materialDesign:Chip>
        </DockPanel>
        <Separator VerticalAlignment="Bottom" Margin="0 0 0 0" BorderThickness="1"/>
        
        <Grid Grid.Row="1" DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Выберите дату" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <DatePicker
                    materialDesign:HintAssist.Hint="Выберите дату"
                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                    <!--<Calendar
                    Padding="5"
                    Grid.Row="0"
                    x:Name="MaterialCalendar" Margin="10 0 10 10" 
                    IsTodayHighlighted="False"
                    Background="Black">
                        <Calendar.Resources>
                            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="Gray" />
                            <SolidColorBrush x:Key="MaterialDesignBody" Color="White" />
                        </Calendar.Resources>
                    </Calendar>-->

                    <Grid Grid.Row="1">
                        <!--  BG  -->
                        <ProgressBar
                            Width="125"
                            Height="125"
                            Value="100"
                            Foreground="LightGray"
                            Style="{StaticResource MaterialDesignCircularProgressBar}" />
                        <ProgressBar
                            Width="125"
                            Height="125"
                            Value="50"
                            Style="{StaticResource MaterialDesignCircularProgressBar}" />
                        <TextBlock Text="50%" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="25"/>
                        <TextBlock Margin="0 0 0 1" HorizontalAlignment="Center" VerticalAlignment="Bottom">35/70</TextBlock>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox Header="Ваши задания" Grid.Row="1" Grid.Column="1" Margin="5">
                <ScrollViewer>
                    <DataGrid ItemsSource="{Binding ItemList}" HeadersVisibility="None" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.CellTemplate >
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="1231212312311231231231231231231231231231231231231212312312311231231231312" TextWrapping="Wrap" HorizontalAlignment="Left" />
                                            <Grid Grid.Column="1" HorizontalAlignment="Right">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:Card
                                                Background="{DynamicResource PrimaryHueLightBrush}"
                                                Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                                Width="auto"
                                                Height="35"
                                                Margin="5"
                                                Padding="8">
                                                    <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Aa" />
                                                </materialDesign:Card>
                                                <ToggleButton
                                                    Grid.Column="1"    
                                                    Content="{materialDesign:PackIcon Kind=Close, Size=21}"
                                                    Style="{StaticResource MaterialDesignActionLightToggleButton}"
                                                    IsChecked="True"
                                                    ToolTip="MaterialDesignActionLightToggleButton" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </GroupBox>
            <GroupBox Header="Описание задания" Grid.Row="1" Grid.Column="2" Margin="5">
                <ScrollViewer>
                    <StackPanel>
                        <TextBox
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                VerticalAlignment="Top"
                                Height="100"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Описание"
                            />
                        <materialDesign:Card
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Margin="0 5 0 5">
                            <StackPanel>
                                <TextBlock
                                Margin="16 16 12 8"
                                FontSize="16"
                                Text="Notes" />
                            
                                <CheckBox
                                    Margin="16 4 16 0"
                                    Style="{StaticResource MaterialDesignUserForegroundCheckBox}"
                                    Content="Do something good" />
                                <CheckBox
                                    Margin="16 4 16 0"
                                    Style="{StaticResource MaterialDesignUserForegroundCheckBox}"
                                    Content="Do something good" />
                                <CheckBox
                                    Margin="16 4 16 0"
                                    Style="{StaticResource MaterialDesignUserForegroundCheckBox}"
                                    Content="Do something good" />

                                <Separator
                                Style="{StaticResource MaterialDesignLightSeparator}" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Margin="10" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="MaterialDesignFloatingActionMiniAccentButton">
                                    <materialDesign:PackIcon Kind="Trash" />
                                </Button>
                                <Button Margin="10" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="MaterialDesignFloatingActionMiniAccentButton">
                                    <materialDesign:PackIcon Kind="Plus" />
                                </Button>
                                </StackPanel>
                                <ProgressBar Value="50" materialDesign:TransitionAssist.DisableTransitions="True" Height="10" />
                            </StackPanel>
                        </materialDesign:Card>
                        <Grid Margin="0 5 0 5">
                            <Image Source="/Resources/Images/download.jpg"/>
                            <Button
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="10"
                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                ToolTip="MaterialDesignFloatingActionMiniAccentButton">
                                <materialDesign:PackIcon Kind="Trash" />
                            </Button>
                        </Grid>
                        <Grid Margin="0 5 0 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:Badged
                            HorizontalAlignment="Center"
                            Badge="{materialDesign:PackIcon Plus}"
                            BadgeColorZoneMode="SecondaryMid">
                                <Button
                                Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                                ToolTip="MaterialDesignFloatingActionMiniLightButton">
                                    <materialDesign:PackIcon Kind="ImageAdd"/>
                                </Button>
                            </materialDesign:Badged>

                            <materialDesign:Badged
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            Badge="{materialDesign:PackIcon Plus}"
                            BadgeColorZoneMode="SecondaryMid">
                                <Button
                                Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                                ToolTip="MaterialDesignFloatingActionMiniLightButton">
                                    <materialDesign:PackIcon Kind="Poll"/>
                                </Button>
                            </materialDesign:Badged>
                            
                            <!--<materialDesign:Badged
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            Badge="{materialDesign:PackIcon Plus}"
                            BadgeColorZoneMode="SecondaryMid">
                                <Button
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                ToolTip="MaterialDesignFloatingActionMiniLightButton">
                                    <materialDesign:PackIcon Kind="Tag"/>
                                Button>
                            </materialDesign:Badged>-->

                            <materialDesign:Badged
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            Badge="{materialDesign:PackIcon Plus}"
                            BadgeColorZoneMode="SecondaryMid">
                                <materialDesign:PopupBox
                            Grid.Column="2" Background="{DynamicResource PrimaryHueDarkBrush}"
                            Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                            PlacementMode="BottomAndAlignCentres"
                            ToolTipService.Placement="Right"
                            ToolTip="PopupBox, Style MaterialDesignMultiFloatingActionPopupBox" Cursor="Hand">
                                    <StackPanel>
                                        <Button
                                    ToolTip="Two"
                                    Content="2" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </materialDesign:Badged>
                        </Grid>
                        <Button Margin="0 5 0 5" Content="Добавить задачу"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </DockPanel>
</UserControl>
